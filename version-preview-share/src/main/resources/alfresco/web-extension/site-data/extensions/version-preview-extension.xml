<?xml version='1.0' encoding='UTF-8'?>
<extension>
	<modules>
  		<module>
    		<id>Document Versions Preview :: Panel Replacer Module</id>
            <evaluator type="default.extensibility.evaluator" />
            <components>
                <!-- Replace Document Versions Panel with Document Versions Preview Panel -->
                <component>
                    <scope>template</scope>
                    <region-id>document-versions</region-id>
                    <source-id>document-details</source-id> 
                    <sub-components>
                        <sub-component id="default">
                            <evaluations>
                                <evaluation id="replaceVersionsHistory">
                                 	<evaluators>    
                                        <evaluator type= "alfresco.subcomponent.evaluator.versionsPreview.checkMimetype" ></evaluator>                                
                                    </evaluators>
                                    <url>/components/document-details/document-version-preview</url>  
                                    <render>true</render>
								</evaluation>
							</evaluations>
						</sub-component>
					</sub-components>                   
				</component>
			</components>
		</module>
	</modules>
</extension>